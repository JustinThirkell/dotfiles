#!/usr/bin/env bash
#
# bootstrap installs things.

# Make sure .sh files are executable.
find . -type f -iname "*.sh" -exec chmod +x {} \;

cd "$(dirname "$0")/.."
DOTFILES_ROOT=$(pwd -P)

set -e

echo ''

info() {
  printf "\r  [ \033[00;34m..\033[0m ] $1\n"
}

user() {
  printf "\r  [ \033[0;33m??\033[0m ] $1\n"
}

success() {
  printf "\r\033[2K  [ \033[00;32mOK\033[0m ] $1\n"
}

fail() {
  printf "\r\033[2K  [\033[0;31mFAIL\033[0m] $1\n"
  echo ''
  exit
}

setup_gitconfig() {
  if ! [ -f git/gitconfig.local.personal.symlink ]; then
    info 'setup gitconfig'

    git_credential='cache'
    if [ "$(uname -s)" == "Darwin" ]; then
      git_credential='osxkeychain'
    fi

    user ' - What is your github author name?'
    read -e git_authorname
    user ' - What is your github author email?'
    read -e git_authoremail

    sed -e "s/AUTHORNAME/$git_authorname/g" -e "s/AUTHOREMAIL/$git_authoremail/g" -e "s/GIT_CREDENTIAL_HELPER/$git_credential/g" git/gitconfig.local.personal.symlink.example >git/gitconfig.local.personal.symlink

    success 'gitconfig'
  fi
}

link_file() {
  local src=$1 dst=$2

  local overwrite= backup= skip=
  local action=

  if [ -f "$dst" -o -d "$dst" -o -L "$dst" ]; then

    if [ "$overwrite_all" == "false" ] && [ "$backup_all" == "false" ] && [ "$skip_all" == "false" ]; then

      local currentSrc="$(readlink "$dst" 2>/dev/null || echo "")"

      if [ "$currentSrc" == "$src" ]; then

        skip=true

      else
        info "symlinking $dst from $src"

        user "File already exists: $dst ($(basename "$src")), what do you want to do?\n\
        [s]kip, [S]kip all, [o]verwrite, [O]verwrite all, [b]ackup, [B]ackup all?"
        read -n 1 action

        case "$action" in
        o)
          overwrite=true
          ;;
        O)
          overwrite_all=true
          ;;
        b)
          backup=true
          ;;
        B)
          backup_all=true
          ;;
        s)
          skip=true
          ;;
        S)
          skip_all=true
          ;;
        *) ;;
        esac

      fi

    fi

    overwrite=${overwrite:-$overwrite_all}
    backup=${backup:-$backup_all}
    skip=${skip:-$skip_all}

    # Backup first (if enabled), which moves the file out of the way
    if [ "$backup" == "true" ]; then
      timestamp=$(date +%Y%m%d-%H%M%S)
      backup_file="${dst}.backup.${timestamp}"
      mv "$dst" "$backup_file"
      success "moved $dst to $backup_file"
    # If overwrite is true but backup is false, remove the file
    elif [ "$overwrite" == "true" ]; then
      rm -rf "$dst"
      success "removed $dst"
    fi

    if [ "$skip" == "true" ]; then
      success "skipped $src"
    fi
  fi

  if [ "$skip" != "true" ]; then # "false" or empty
    ln -s "$1" "$2"
    success "linked $2 to point to $1"
  fi
}

install_dotfile_home_dir_symlinks() {
  info 'installing dotfile home dir symlinks'

  local overwrite_all=false backup_all=false skip_all=false

  for src in $(find -H "$DOTFILES_ROOT" -maxdepth 2 -name '*.symlink' -not -path '*.git*'); do
    dst="$HOME/.$(basename "${src%.*}")"
    link_file "$src" "$dst"
  done
}

install_dotfile_app_settings_symlinks() {
  info 'installing dotfile app settings symlinks'

  local overwrite_all=false backup_all=false skip_all=false
  local app_settings_dir="$DOTFILES_ROOT/app_settings"

  if [ ! -d "$app_settings_dir" ]; then
    success "dotfiles app_settings directory does not exist, skipping"
    return
  fi

  while IFS= read -r -d '' src; do
    # Skip system files like .DS_Store and ._* (AppleDouble files)
    local basename=$(basename "$src")
    if [[ "$basename" == ".DS_Store" ]] || [[ "$basename" =~ ^\._ ]]; then
      continue
    fi

    # Get the relative path from app_settings_dir
    local relative_path="${src#$app_settings_dir/}"
    local dst="$HOME/$relative_path"

    # Ensure parent directory exists
    local dst_dir=$(dirname "$dst")
    mkdir -p "$dst_dir"

    link_file "$src" "$dst"
  done < <(find -H "$app_settings_dir" -type f -print0)
}

setup_oh_my_zsh() {
  info 'setup oh-my-zsh'

  mkdir -p ~/.oh-my-zsh/custom/themes
  mkdir -p ~/.oh-my-zsh/custom/plugins
  custom_dir=${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}
  [ -d $custom_dir/themes/powerlevel10k ] || git clone --depth=1 https://github.com/romkatv/powerlevel10k.git ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/themes/powerlevel10k
  [ -d $custom_dir/plugins/zsh-autosuggestions ] || git clone --depth=1 https://github.com/zsh-users/zsh-autosuggestions ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/plugins/zsh-autosuggestions
}

setup_gitconfig
setup_oh_my_zsh
install_dotfile_home_dir_symlinks
install_dotfile_app_settings_symlinks

prefix_output() {
  while IFS= read -r line; do
    info "$line"
  done
}

if [ "$(uname -s)" == "Darwin" ]; then
  info "installing dependencies"
  if bin/dot 2>&1 | prefix_output; then
    success "dependencies installed"
  else
    fail "error installing dependencies"
  fi
fi

echo ''
echo '  All installed!'
