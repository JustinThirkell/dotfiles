[
	// Fix for Command+Arrow keys not working in Cursor's integrated terminal
	// Known issue: https://forum.cursor.com/t/modifier-cmd-option-etc-keybindings-stop-working-in-editor-area-terminal-tabs-starting-v1-6/136126
	// VS Code handles these by default, but Cursor requires explicit keybindings
	{
		"key": "cmd+left",
		"command": "workbench.action.terminal.sendSequence",
		"args": { "text": "\u0001" },
		"when": "terminalFocus"
	},
	{
		"key": "cmd+right",
		"command": "workbench.action.terminal.sendSequence",
		"args": { "text": "\u0005" },
		"when": "terminalFocus"
	}
]
