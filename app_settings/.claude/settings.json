{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "cleanupPeriodDays": 99999,
  "attribution": {
    "commit": "Co-Authored-By: Claude",
    "pr": ""
  },
  "permissions": {
    "allow": ["WebSearch", "WebFetch", "Bash(vacuum *)"],
    "deny": [
      "Read(~/.ssh/**)",
      "Read(~/.gnupg/**)",
      "Read(~/.aws/**)",
      "Read(~/.envrc)",
      "Read(~/*.local)",
      "Read(~/.config/op/**)",
      "Write(~/.ssh/**)",
      "Write(~/.gnupg/**)",
      "Write(~/.aws/**)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "npx ccusage@latest statusline"
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": false,
    "network": {
      "allowedDomains": ["github.com", "api.github.com", "*.npmjs.org", "registry.yarnpkg.com"]
    }
  },
  "model": "opus"
}
